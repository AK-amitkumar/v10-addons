<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">

        <!-- portal new user EN-->
         <record id="eq_mail_template_data_portal_welcome" model="mail.template">
            <field name="name">Portal: new user</field>
            <field name="model_id" ref="portal.model_portal_wizard_user"/>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Your Odoo account at ${user.company_id.name}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="True"/>
            <field name="body_html"><![CDATA[
<p>
    Dear ${object.user_id.name or ''},
</p>
<p>
    You have been given access to ${user.company_id.name}'s ${object.wizard_id.portal_id.name}.
</p>
<p>
    Your login account data is:
</p>
<ul>
    <li>Username: ${object.user_id.login or ''}</li>
    <li>Portal: <a href="${'portal_url' in ctx and ctx['portal_url'] or ''}">${'portal_url' in ctx and ctx['portal_url'] or ''}</a></li>
</ul>
<p>
	You can set or change your password via the following url:
</p>
<ul>
    <li><a href="${object.user_id.signup_url}">${object.user_id.signup_url}</a></li>
</ul>
<span>TEST</span>
<p>
${object.wizard_id.welcome_message or ''}</p>
]]></field>
        </record>

        <!-- portal new user DE -->
        <record id="eq_mail_template_data_portal_welcome_de" model="ir.translation">
            <field name="name">mail.template,body_html</field>
            <!--<field name="res_id">21</field>-->
			<field name="res_id" ref="eq_mail_template_data_portal_welcome"/>
            <field name="lang">de_DE</field>
            <field name="value"><![CDATA[
<p>
    Sehr geehrte/r ${object.user_id.name or ''},
</p>
<p>
    wir haben für Sie einen Nutzerzugang angelegt für ${user.company_id.name}'s ${object.wizard_id.portal_id.name}.
</p>
<p>
    Ihre Logindaten lauten:
</p>
<ul>
    <li>Nutzername: ${object.user_id.login or ''}</li>
    <li>Portal: <a href="${'portal_url' in ctx and ctx['portal_url'] or ''}">${'portal_url' in ctx and ctx['portal_url'] or ''}</a></li>
</ul>
<p>
	Auf dieser Seite können Sie Ihr Passwort setzen oder ändern:
</p>
<ul>
    <li><a href="${object.user_id.signup_url}">${object.user_id.signup_url}</a></li>
</ul>
<span>TEST</span>
<p>
${object.wizard_id.welcome_message or ''}</p>
]]></field>
        </record>

       <record id="eq_mail_template_data_portal_welcome_name" model="ir.translation" >
            <field name="name">mail.template,name</field>
			<field name="res_id" ref="eq_mail_template_data_portal_welcome"/>
            <field name="lang">de_DE</field>
            <field name="type">model</field>
            <field name="state">translated</field>
           <field name="value">Portal: Neuer Benutzer</field>
       </record>
        <record id="eq_mail_template_data_portal_welcome_subject" model="ir.translation">
             <field name="name">mail.template,subject</field>
             <field name="res_id" ref="eq_mail_template_data_portal_welcome"/>
             <field name="lang">de_DE</field>
             <field name="state">translated</field>
            <field name="value">Ihr neuer Portal-Benutzer bei ${user.company_id.name}</field>
         </record>


	</data>
</odoo>