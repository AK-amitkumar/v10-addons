<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="eq_report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-call='report.external_layout']" position="replace">
                <t t-call="eq_base_report.eq_external_layout">
                    <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
                    <!--<div class="padding-print">-->
                        <div class="page"><!-- klasse entfernt: padding-print-->
                            <div class="oe_structure"/>
                            <t t-set="currency_sign" t-value="doc.pricelist_id.currency_id.symbol"/>
                            <t t-set="eq_saleorder_extension_address_header">
                                <div id="address" class="col-xs-7 leftbox">
                                    <p id="returnaddress">
                                        <h t-field="doc.company_id.partner_id.name"/>
                                        <span>-</span>
                                        <h t-field="doc.company_id.partner_id.street"/>
                                        <h t-if="doc.company_id.partner_id.eq_house_no">
                                            <h t-field="doc.company_id.partner_id.eq_house_no" />
                                        </h>
                                        <span>-</span>
                                        <h t-field="doc.company_id.partner_id.zip"/>
                                        <span>
                                        </span>
                                        <h t-field="doc.company_id.partner_id.city"/>
                                    </p>
                                    <t t-if="doc.partner_id.parent_id">
                                        <div t-field="doc.partner_id.parent_id.name" style="clear:left;"/>
                                    </t>
                                    <div  style="clear:left;">
                                        <h t-if="doc.partner_id.title.name" t-field="doc.partner_id.title.name"  />
                                        <h t-if="doc.partner_id.eq_firstname" t-field="doc.partner_id.eq_firstname" />
                                        <h t-esc="print_name" />
                                    </div>
                                    <!--<div t-esc="print_name" style="clear:left;"/>-->
                                    <div t-if="doc.partner_id.eq_name2" style="clear:left;">
                                        <div t-field="doc.partner_id.eq_name2"/>
                                    </div>
                                    <div style="clear:left;">
                                        <span t-field="doc.partner_id.street"/>
                                        <h t-if="doc.partner_id.eq_house_no">
                                            <span t-field="doc.partner_id.eq_house_no" />
                                        </h>
                                    </div>
                                    <div t-if="doc.partner_id.street2">
                                        <div t-field="doc.partner_id.street2"/>
                                    </div>
                                    <h>
                                        <span t-field="doc.partner_id.zip"/>
                                        <span t-field="doc.partner_id.city"/>
                                        <h t-if="doc.partner_id.eq_citypart">
                                            -
                                            <h t-field="doc.partner_id.eq_citypart" />
                                        </h>
                                    </h>
                                    <div t-field="doc.partner_id.country_id.name"/>
                                </div>
                            </t>
                            <t t-set="eq_saleorder_extension_right_header">
                                <div class="col-xs-5 rightbox">
                                    <table style="width:100%;float:right; font-size: 0.8em;">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <span>Customer no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.partner_id.customer_number"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.client_order_ref">
                                                <td>
                                                    <span>Your reference no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.client_order_ref"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.origin">
                                                <td>
                                                    <span>Our reference no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.origin" />
                                                </td>
                                            </tr>
                                            <tr t-if="doc.name">
                                                <td t-if="doc.state not in ['draft','sent']">
                                                    <span>Order no.</span>
                                                </td>
                                                <td t-if="doc.state in ['draft','sent']">
                                                    <span>Quotation no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.name"/>
                                                </td>
                                            </tr>
                                            <tr t-if="order_date">
                                                <td t-if="doc.state not in ['draft','sent']">
                                                    <span>Order date</span>
                                                </td>
                                                <td t-if="doc.state in ['draft','sent']">
                                                    <span>Quotation date</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="order_date"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.validity_date and doc.state in ['draft','sent']">
                                                <td id="sale_header_placeholder">
                                                    <span>Offer valid until</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.validity_date"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <h style="line-height:3em;" t-if="doc.user_id">
                                        <strong>For further information, please contact</strong>
                                    </h>
                                    <table style="width:100%; font-size: 0.8em;" t-if="doc.user_id">
                                        <tbody>
                                            <tr t-if="doc.user_id.name">
                                                <td>
                                                    <span>Contact person</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.eq_firstname"/> <span t-field="doc.user_id.name"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.user_id.phone">
                                                <td>
                                                    <span>Phone</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.phone"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.user_id.fax">
                                                <td>
                                                    <span>Fax</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.fax"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.user_id.email">
                                                <td>
                                                    <span>E-Mail</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.email"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <t t-set="table_header">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Pos.</strong>
                                        </th>
                                        <th>
                                        </th>
                                        <th>
                                            <strong>Item description</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Qty.</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Unit</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>VAT</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Unit price</strong>
                                        </th>
                                        <th t-if="any([line.discount for line in doc.order_line])"
                                            class="text-right">
                                            <strong>Discount (%)</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Net price</strong>
                                        </th>
                                    </tr>
                                </thead>
                            </t>
                            <t t-set="page_break">
                                <![CDATA[
                                    </tbody>
                                    </table>
                                ]]>
                                <div style="page-break-before:always;">
                                </div>
                                <h2 style="margin-bottom:25px; margin-top:25px">
                                    <span/>
                                </h2>
                                <div class="col-xs-12"
                                     style="margin-top: 0em; margin-bottom: 0em; margin-left: 0px; padding-left: 0px;">
                                    <div>
                                        <span/>
                                    </div>
                                </div>
                                <![CDATA[
                                    <table class="table table-condensed table-row">
                                ]]>
                                <t t-raw="table_header"/>
                                <![CDATA[
                                    <tbody class="sale_tbody">
                                ]]>
                            </t>
                            <div class="row">
                                <t t-raw="eq_saleorder_extension_address_header"/>
                                <t t-raw="eq_saleorder_extension_right_header"/>
                            </div>
                            <div style="margin-bottom:25px; margin-top:25px; font-size: 1.7em;">
                                <span t-if="doc.state not in ['draft','sent']">Sale order</span>
                                <span t-if="doc.state in ['draft','sent']">Quotation</span>
                                <span t-field="doc.name"/>
                            </div>
                            <div t-if="doc.eq_head_text" class="eq_headertext">
                                <p t-field="doc.eq_head_text"/>
                            </div>
                            <div class="col-xs-12"
                                 style="margin-top:1em; margin-bottom:2em; font-size:0.8em; margin-left:0px; padding-left:0px;">
                            </div>
                            <table class="table table-condensed table-row">
                                <t t-raw="table_header"/>
                                <tbody class="sale_tbody">
                                    <t t-set="pos" t-value="1"/>
                                    <t t-set="page_sub_total" t-value="0.00"/>
                                    <t t-set="sub_total" t-value="0.00"/>
                                    <t t-foreach="doc.order_line" t-as="line">
                                        <tr
                                                style="page-break-after:auto; page-break-inside:avoid !important; font-size: 0.8em;">
                                            <td>
                                                <span t-esc="pos"/>
                                            </td>
                                            <td>
                                                <!-- <span t-field="line.product_id.default_code" /> -->
                                            </td>
                                            <td style="width:8cm;">
                                                <strong>
                                                    <span t-field="line.product_id.name"/>
                                                </strong>
                                                <br/>
                                                <span t-field="line.name"/>
                                                <t id="eq_drawing_number" />
                                                <!--<t t-if="doc.state not in ['draft','sent']">-->
                                                    <t t-if="line.eq_delivery_date">
                                                        <div class="clearfix"></div>
                                                        Delivery date:
                                                            <span t-field="line.eq_delivery_date" />
                                                    </t>
                                                <!--</t>-->
                                                <div id="agreement_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-if="line.tax_id">
                                                    <span t-field="line.tax_id[0].description"/>
                                                </span>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"
                                                      t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                            <td t-if="any([line.discount for line in doc.order_line])"
                                                class="text-right">
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"
                                                      t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                            <t t-set="pos" t-value="pos + 1"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div class="row padding-fix">
                                <div name="total">
                                    <table class="table" rules="none"
                                           style="border-top: 1px solid #999999; border-bottom: 1px solid #999999; page-break-inside:avoid !important; font-size: 0.8em;">
                                        <thead>
                                            <tr><!-- class="border-black" -->
                                                <td class="text-right" id="price_netto">
                                                    <strong>Total without taxes</strong>
                                                </td>
                                                <td class="text-right">
                                                    <strong>
                                                        <span>Total VAT</span>
                                                    </strong>
                                                </td>
                                                <td class="text-right">
                                                    <strong>Total sum</strong>
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-right" id="price_netto_amount">
                                                    <span t-field="doc.amount_untaxed"
                                                          t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                                </td>
                                                <td class="text-right" t-if="doc.order_line[0].tax_id">
                                                    <span t-field="doc.amount_tax"
                                                          t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_total"
                                                          t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-xs-12"
                                     style="margin-top:1em; margin-bottom:2em; margin-left:0px; padding-left:0px; page-break-inside:avoid !important;">
                                    <table class="col-xs-3"
                                           style="width:auto!important; max-width:50%; font-size: 0.8em;">
                                        <tbody>
                                            <!--<tr t-if="doc.note">
                                                <td style="padding-right:0.5cm; vertical-align:top;" colspan="2">
                                                    <p t-field="doc.note"/>
                                                </td>
                                            </tr>-->
                                            <tr t-if="doc.note">
                                                <td style="padding-right:0.5cm; vertical-align:top; " colspan="2" class="eq_footertext">
                                                    <p t-field="doc.note" style="margin-bottom:3em;"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.payment_term_id">
                                                <td style="padding-right:0.5cm;">
                                                    Term of payment:
                                                </td>
                                                <td>
                                                    <span t-field="doc.payment_term_id.note"/>

                        <!-- Diesen Container löschen, nach Oktober 2017-->
                        <!--<div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3" style="border:2px solid red;">
                            <strong>Payment Terms:</strong>
                            <p t-field="doc.payment_term_id"/>
                        </div>-->
                                                </td>
                                            </tr>
                                            <tr t-if="doc.incoterm">
                                                <td style="padding-right:0.5cm;">
                                                    Incoterm:
                                                </td>
                                                <td>
                                                    <span t-field="doc.incoterm.name"/>
                                                </td>
                                            </tr>
                                            <tr
                                                    t-if="doc.partner_invoice_id != doc.partner_id and doc.partner_invoice_id != False">
                                                <td style="padding-right:0.5cm; font-weight:bold;" valign="top">
                                                    Invoice address:
                                                </td>
                                                <td style="padding-bottom:0.5cm;">
                                                    <div>
                                                        <!-- falls es einen übergeordneten Partner gibt, dann dessen
                                                            Namen ausgeben -->
                                                        <t t-if="doc.partner_invoice_id.parent_id">
                                                            <div t-field="doc.partner_invoice_id.parent_id.name"
                                                                 style="clear:left;"/>
                                                        </t>
                                                        <div t-field="doc.partner_invoice_id.name" style="clear:left;"/>
                                                        <div t-field="doc.partner_invoice_id.street"/>
                                                        <div t-if="doc.partner_invoice_id.street2">
                                                            <div t-field="doc.partner_invoice_id.street2"/>
                                                        </div>
                                                        <h>
                                                            <h t-field="doc.partner_invoice_id.zip"/>
                                                            <h t-field="doc.partner_invoice_id.city"/>
                                                        </h>
                                                        <div t-field="doc.partner_invoice_id.country_id.name"/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr
                                                    t-if="doc.partner_shipping_id != doc.partner_id and doc.partner_shipping_id != False">
                                                <td style="padding-right:0.5cm; font-weight:bold;" valign="top">
                                                    Shipping address:
                                                </td>
                                                <td>
                                                    <div>
                                                        <t t-if="doc.partner_shipping_id.parent_id">
                                                            <div t-field="doc.partner_shipping_id.parent_id.name"
                                                                 style="clear:left;"/>
                                                        </t>
                                                        <div t-field="doc.partner_shipping_id.name" style="clear:left;"/>
                                                        <div t-field="doc.partner_shipping_id.street"/>
                                                        <div t-if="doc.partner_shipping_id.street2">
                                                            <div t-field="doc.partner_shipping_id.street2"/>
                                                        </div>
                                                        <h>
                                                            <h t-field="doc.partner_shipping_id.zip"/>
                                                            <h t-field="doc.partner_shipping_id.city"/>
                                                        </h>
                                                        <div t-field="doc.partner_shipping_id.country_id.name"/>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div></div>
                            </div>
                            <div class="col-xs-12"
                                 style="margin-top:1em;font-size:0.8em; margin-left:0px; padding-left:0px; page-break-inside:avoid !important;">
                            </div>
                            <div class="col-xs-12"
                                 style="margin-top:1em;font-size:0.8em; margin-left:0px; padding-left:0px; page-break-inside:avoid !important;">
                                <!--
                                <p style="margin-bottom:0.3cm!important;">
                                    <span>
                                        <p>
                                            <h>Prices may be changed by</h>
                                            <h t-field="doc.company_id.name"/>
                                            <h>due to currency exchange rates.</h>
                                        </p>
                                        <p>
                                            <h>Solely the T&amp;C of</h>
                                            <h t-field="doc.company_id.name"/>
                                            <t t-if="doc.company_id.website">
                                                <h>(</h>
                                                <h t-field="doc.company_id.website"/>
                                                <h>)</h>
                                            </t>
                                            <h>shall be applicable.</h>
                                        </p>
                                        <div t-if="doc.state in ['draft', 'sent']">
                                            <p>The offer is subject to change. An order can be placed only
                                                after a positive credit check of the customer.
                                            </p>
                                        </div>
                                    </span>
                                </p>
                                -->
                            </div>
                            <div id="informations" style="display:none;"></div>
                            <p id="fiscal_position_remark"></p>
                            <div name="payment_term"></div>
                            <div class="oe_structure"/>
                        </div>
                    <!--</div>-->
                </t>
            </xpath>
        </template>

        <template id="eq_report_saleorder">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="eq_sale.eq_report_saleorder_document"
                       t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
